/* 1:网页背景灰色*/
page{
  background-color:#f1f1f1;
}
/* 2:卡片区域中内容按列排列 */
/* 3:使用弹性布局方向 */
.card{
 background-color:#fff;
 border:1rpx solid #ddd;
 border-radius:10px;
 margin:60rpx 20rpx;
 padding:30px;
 display:flex;
 flex-direction:column;
}
/* 4:标题 */
.card-title{
   font-size:20px;
   margin-bottom:20rpx;
}
/* 5:日期 下划线 */
.card-date{
  font-size:14px;
  color:#ccc;
  padding-bottom:20rpx;
  border-bottom:1rpx solid #ddd;
  margin-bottom:20rpx;
}
/*6:图片 300rpx*/
.card-img{
  width:100%;
  height:300rpx;
}
/*7:描述*/
.card-desc{
  font-size:16px;
  color:#333;
  padding-bottom:20rpx;
  border-bottom:1rpx solid #ddd;
  margin:20rpx 0;
}
/*8:查看详情*/
.card-read{
  font-size:14px;
  color:#666;
}




