<!--图片轮播  组件-->
<!--图片轮播  组件尽量使用原生自带效率好一些-->
<view class="slider">
  <swiper autoplay interval="3500" indicator-dots="{{false}}">
     <swiper-item wx:for="{{rows}}" wx:key="id">
       <!--图片 设置宽高 等比例缩放-->
       <image src="{{item.img_url}}"
        mode="aspectFill" lazy-load width="375" height="150"/>
     </swiper-item>
  </swiper>
</view>
<!--首页导航分区-->
<view class="index-nav bgw">
   <navigator bindtap="jumpShopList" data-tid="{{item.id}}" class="nav-item bdr" wx:for="{{datas}}" wx:key="{{id}}">
     <image src="{{item.img_url}}" lazy-load></image>
     <text>{{item.title}}</text>
   </navigator>
</view>

<!--两块区域分隔线-->
<view class="divider"></view>
<!--入口区域-->
<view class="index-enter bgw mt20">
 <navigator class="enter-item">
    <image src="/assets/images/link-01.png"></image>
 </navigator>
 <navigator>
    <image src="/assets/images/link-02.png"></image>
 </navigator>
</view>
