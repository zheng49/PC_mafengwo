/* pages/detail/detail.wxss */
.slider,
.slider image,
.slider swiper{
   width:100%;
   height:390rpx; /*图片测量出结果*/
}
/*练习:使用弹性布局使用三行三列功能*/
.index-nav{
  display:flex;    /*弹性布局*/
  flex-wrap:wrap;
}

.shop-title{
  font-size: 18px;
  color: #333;
}
.priceInfo .oldprice{
  color:#ccc;
  text-decoration: line-through;
  margin-right: 25rpx;
}
.priceInfo .newprice{
  color: red;
  font-size: 18px;
}
.tui-number-group{
  display: table;
  table-layout: fixed;
  width: 300rpx;
  text-align: center;
  border-radius: 6px;
  overflow: hidden;
  border: 1px solid #bbb;
}
.tui-number-cell{
  display: table-cell;
  line-height: 1.7;
  border-radius: 0;
}
button::after{
  border-radius: 0;
  border-top: none;
  border-bottom: none;
}
.cart-price{
  font-size: 18px;
  color: red;
}
.addOrder{
  background-color:#fc0;
  font-size: 14px;
}
.addCart{
  background-color: #fc6;
  font-size: 14px;
}