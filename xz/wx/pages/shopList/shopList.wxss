/* pages/shopList/shopList.wxss */

/*组件背景设置白色*/
page{
  background-color:#fff;
}

/*商品项目*/
.shop{
  padding:20rpx;
  border-bottom:1rpx solid #ddd;
  display:flex;
  position:relative;
}

.shop-img{
  width:160rpx;
  height:160rpx;
  margin-right:20rpx;
}
.shop-info{
  width:520rpx;
  display:flex;
  flex-direction:column;
  font-size:12px;
  color:#666;
  line-height:1.5;
}
.shop-title{
  font-size:16px;
  color:#333;
  width:380rpx;
}

/*打分*/
.shop-star{
  position:absolute;
  right:20rpx;
  top:20rpx;
}

