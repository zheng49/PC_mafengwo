/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


/*app.wxss*/
/*第一个样式:细线{九宫格}:提取全局细线样式*/
.bdr{
  position:relative;
}
.bdr::after{
  content:"";
  width:1rpx;
  height:100%;
  position:absolute;
  right:0;
  top:0;
  background-color:#ccc;
}


/*第二功能 通用灰色分隔线*/
/*<view class="divider"></view> */
.divider{
  height:20rpx;
  background:#f1f1f1;
  box-shadow:0 5rpx 5rpx rgba(0,0,0,.1) inset;
}

/*第三功能 通用箭头*/
.arrow{
  display:flex;
  justify-content:space-between;/*两端对齐*/
  align-items:center;
}
.arrow::after{
  content:"";
  width:15rpx;
  height:15rpx;
  border-top:3rpx solid #ccc;
  border-right:3rpx solid #ccc;
  transform:rotate(45deg);
}

/*个人中心列表*/
/*第三四功能:列表提供 app.wxss*/
.cell{
  background-color:#fff;
  font-size:16px;
}
.cell-item{
  border-bottom:1rpx solid #ddd;
  padding:20rpx 30rpx;
}

/*封装第五个功能 打分星星*/
.star-after{
  color:#e2e2e2;
}
/*前景色为橙色星星*/
.star-before{
  color:#f19e38;
  position:absolute;
  top:0;
  left:0;
  width:75%;
  overflow:hidden;
}

/*功能六:*/
/*封装app.wxss*/
/*单行超出宽度变省略号*/
.ell{
 overflow:hidden;
 white-space:nowrap;  /*不允许换行*/
 text-overflow:ellipsis;/*超出部分补充...*/
}

/*功能7:加载更多样式*/
/* 正在加载公共样式 */
.loadmore {
  color: #888;
  font-size: 16px;
  line-height: 100rpx;
  text-align: center;
}

.loadmore.loading::before {
 content: '';
 width: 40rpx;
 height: 40rpx;
 margin-top: -10rpx;
 margin-right: 10rpx;
 display: inline-block;
 vertical-align: middle;
 animation: loading 1s steps(12) infinite;
 background: transparent url(data:image/svg+xml;base64,) no-repeat;
 background-size: 100%;
}

@keyframes loading {
 0% {
   transform: rotate(0deg);
 }
 100% {
   transform: rotate(-360deg);
 }
}
